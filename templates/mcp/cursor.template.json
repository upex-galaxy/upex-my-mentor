{
  "servers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--caps",
        "vision,pdf",
        "--timeout-action",
        "10000",
        "--timeout-navigation",
        "30000",
        "--ignore-https-errors",
        "--isolated"
      ]
    },
    "devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp"
      ]
    },
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest"
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "${input:supabase-token}"
      }
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "tavity": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.tavily.com/mcp/?tavilyApiKey=${input:tavily-key}"
      ]
    },
    "postman": {
      "type": "http",
      "url": "https://mcp.postman.com/mcp",
      "headers": {
        "Authorization": "Bearer ${input:postman-key}"
      }
    },
    "sentry": {
      "type": "http",
      "url": "https://mcp.sentry.dev/mcp/${SENTRY_PROJECT_NAME}/${SENTRY_PROJECT_LANGUAGE}"
    },
    "vercel": {
      "type": "http",
      "url": "https://mcp.vercel.com/"
    },
    "notion": {
      "type": "http",
      "url": "https://mcp.notion.com/mcp"
    },
    "atlassian": {
      "type": "sse",
      "url": "https://mcp.atlassian.com/v1/sse"
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer ${input:github-token}"
      }
    },
    "slack": {
      "command": "npx",
      "args": [
        "-y",
        "slack-mcp-server@latest",
        "--transport",
        "stdio"
      ],
      "env": {
        "SLACK_MCP_XOXP_TOKEN": "${input:slack-token}",
        "SLACK_MCP_ADD_MESSAGE_TOOL": "true",
        "SLACK_MCP_USERS_CACHE": "~/.cursor/mcp-cache/slack/",
        "SLACK_MCP_CHANNELS_CACHE": "~/.cursor/mcp-cache/slack/"
      }
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "~/.cursor/mcp-data/memory.jsonl"
      }
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "supabase-token",
      "description": "Enter your Supabase access token",
      "password": true
    },
    {
      "type": "promptString",
      "id": "postman-key",
      "description": "Enter your Postman API key",
      "password": true
    },
    {
      "type": "promptString",
      "id": "github-token",
      "description": "Enter your GitHub Personal Access Token",
      "password": true
    },
    {
      "type": "promptString",
      "id": "tavily-key",
      "description": "Enter your Tavily API key",
      "password": true
    },
    {
      "type": "promptString",
      "id": "slack-token",
      "description": "Enter your Slack MCP token (xoxp-...)",
      "password": true
    }
  ]
}
